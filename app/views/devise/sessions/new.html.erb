<div class="container container-form">

  <h1 style="text-align: center;" class="mb-5">Welcome back !</h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs box-shad pt-5 pb-3">
      <div style="width: 80%; margin:auto;">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email", class: "form-border", placeholder: "Email" } %>
        <%= f.input :password,
                    required: false,
                    label: false,
                    input_html: { autocomplete: "current-password", class: "form-border", placeholder: "Password" } %>
        <%= f.input :remember_me, class: "mb-3", as: :boolean if devise_mapping.rememberable? %>
      <div class="form-actions pl-7 mb-3 mt-3">
        <%= f.button :submit, "Log in", class: "btn btn-primary btn-form" %>
      </div>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-primary btn-form"  %>
      </div>
    </div>


  <% end %>

</div>

