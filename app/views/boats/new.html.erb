<div class="container">
  <div class="">
    <%= simple_form_for (@boat) do |f| %>
      <div class="form-group mt-5">
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :category, collection: Boat::CATEGORIES %>
        <%= f.input :photo, as: :file %>
      </div>
      <%= f.submit "Partager votre bateau", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
